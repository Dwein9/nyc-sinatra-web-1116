<h1>Edit a Figure</h1>
<form action="/figures/<%=@figure.id%>" method="post">
  <input type="hidden" name="_method" value="patch">

  <label>Name:</label>
  <input type="text"  value="<%=@figure.name%>" id="figure_name" name="figure[name]">

<h2>Titles</h2>
<!--TITLES  -->
<% Title.all.each do |title| %>
  <label> <%= title.name %> </label>
    <input id="<%= title.name %>" type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" <%= 'checked' if @figure.titles.include?(title)%>>
<% end %>
<p></p>
<label> Create title:</label>
<input type="text" id="new_title" name="title[name]" >
<p></p>

<h2>Landmarks</h2>
<!--LANDMARKS  -->
<% Landmark.all.each do |landmark| %>
  <label> <%= landmark.name %> </label>
    <input id="landmark_<%=landmark.id%>" type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark)%>>
<% end %>
<p></p>
<label> Create Landmark:</label>
<input type="text" id="new_landmark" name="landmark[name]" >
<p></p>


  <input type="submit" value="Edit Figure">

</form>
